<section class="charities-show">
  <section class="charity">
    <h1 class="charity-name"><%= @charity.name %></h1>
    <h3 class="charity-description"><%= @charity.description %></h3>
    <div type="button" class="choose btn btn-primary">
      <%= link_to 'Donate', charities_path %>
    </div>
  </section>

  <section class="achievements-legend">
    <h4>Achievements</h4>
    <p>Register on Charity Spree</p>
    <p>Donate your first dollar</p>
    <p>Donate your fifth dollar</p>
    <p>Donate your tenth dollar</p>
    <p>Donate your twentieth dollar</p>
    <p>Donate your fiftieth dollar</p>
    <p>Donate your hundredth dollar</p>
  </section>
</section>
