<section id="profile" class="container-fluid">
    <a href= '/users/<%= current_user.id %>'>
    <button class="update btn btn-primary">
      <%= image_tag 'cancel.png', :class => 'edit-cog' %>
    </button>
  </a>
  <div class="profile-header">
    <div class="row">
      <div class="col-sm-12">
        <%= image_tag(@user.avatar, :class => 'avatar') %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h1><%= @user.first_name %> <%= @user.last_name %></h1>
        <!-- <div id="featured-achievement">
          <h3><strong>Featured Achievement</strong></h3>
          <h4><%= @user.user_achievements[0].achievement.title %></h4>
          <h4><%= image_tag '001-award.png' %></h4>
        </div> -->
      </div>
    </div>
  </div>


<br>
 <div id="tabs" class="container">
<div class="row">
  <div class="tab-content clearfix">
    <div class="col-md-6 col-md-offset-3 userform" >

        <%= form_for(@user) do |f| %>

          <% if @user.errors.any? %>
            <br>
            <div id="error_explanation" class="errormsg">
              <table>
                <tbody>
                  <tr>
                    <td><%= @user.errors.full_messages.first %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% end %>
          <br>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
          <br>
          <%= f.submit "Save", class: "btn btn-primary" %>
          <%= button_to("Cancel",{}, { name: "commit_cancel", value: "Cancel", class: "btn btn-primary"}) %>
          <br>
          <br>
        <% end %>

      </div>
    </div>
  </div>
</div>
